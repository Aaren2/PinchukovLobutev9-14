<Window x:Class="PinchukovLobutev9_14.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PinchukovLobutev9_14"
        mc:Ignorable="d"
        Title="MainWindow" WindowStartupLocation="CenterScreen" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="TbUser" FontSize="20" />
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Button x:Name="BtnEmployee" Content="Работники" FontSize="18" Margin="10" Click="BtnEmplyee_Click"/>
            <Button x:Name="BtnClient" Content="Клиенты" FontSize="18" Margin="10" Click="BtnClient_Click"/>
            <Button x:Name="BtnAuthorization"  Content="Логины" FontSize="18" Margin="10" Click="BtnAuthorization_Click"/>
            <Button x:Name="BtnOrder" Content="Заказы" FontSize="18" Margin="10" Click="BtnOrder_Click"/>
            <Button x:Name="BtnProduct" Content="Продукты" FontSize="18" Margin="10" Click="BtnProduct_Click"/>
        </StackPanel>
    </Grid>
</Window>
